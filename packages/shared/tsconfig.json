{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@harurobo-2026-score-tool/shared": ["../shared/src/index.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.js", "src/**/*.ts", "prettier.config.mjs", "eslint.config.mjs"]
}
